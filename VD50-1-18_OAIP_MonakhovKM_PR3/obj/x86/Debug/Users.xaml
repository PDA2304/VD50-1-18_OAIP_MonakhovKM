<Page
    x:Class="VD50_1_18_OAIP_MonakhovKM_PR3.Users"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VD50_1_18_OAIP_MonakhovKM_PR3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CommandBar x:ConnectionId='2' VerticalContentAlignment="Center" x:Name="CommandBar" IsOpen="True" IsSticky="False" OverflowButtonVisibility="Collapsed"                              Background="{x:Null}" Grid.Row="0" >
            <AppBarButton Icon="Add" Label="Добавить" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <AppBarButton Icon="Edit" IsEnabled="False" Label="Изменить" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <AppBarButton Icon="Delete" IsEnabled="False" Label="Удалить" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <AppBarButton x:ConnectionId='4' Icon="Refresh" Label="Обновить" VerticalAlignment="Center" VerticalContentAlignment="Center"                           />
            <CommandBar.Content>
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Пользователи" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </CommandBar.Content>
        </CommandBar>
        <controls:DataGrid x:ConnectionId='3' Grid.Row="1" x:Name="userList" ItemsSource="{Binding}" AutoGenerateColumns="False"/>
    </Grid>
</Page>

